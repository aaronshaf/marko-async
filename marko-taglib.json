{
    "tags": {
        "async-fragment": {
            "renderer": "./async-fragment-tag",
            "attributes": {
                "data-provider": {
                    "type": "string"
                },
                "arg": {
                    "type": "expression",
                    "preserve-name": true
                },
                "arg-*": {
                    "pattern": true,
                    "type": "string",
                    "preserve-name": true
                },
                "var": {
                    "type": "identifier"
                },
                "timeout": {
                    "type": "integer"
                },
                "method": {
                    "type": "string"
                },
                "timeout-message": {
                    "type": "string"
                },
                "name": {
                    "type": "string",
                    "description": "Name of async fragment for debugging purposes only"
                }
            },
            "vars": [
                "out",
                {
                    "name-from-attribute": "var OR dependency OR data-provider|keep"
                }
            ],
            "transformer": "./async-fragment-tag-transformer"
        }
    }
}
